# ===================================
# API Trofy - Environment Configuration
# ===================================
# Copy this file to .env and update the values

# ------------------------------
# Server Configuration
# ------------------------------
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ------------------------------
# Database Configuration
# ------------------------------
DB_PATH=./database/pedidos.db

# ------------------------------
# Google Sheets Integration
# ------------------------------
# Get this from your Google Cloud Console
GOOGLE_SHEETS_ID=your_google_sheet_id_here

# ------------------------------
# AI/Notification Service
# ------------------------------
# Base URL for the AI/Notification service
IA_BASE_URL=http://localhost:5000

# ------------------------------
# JWT Authentication (if needed)
# ------------------------------
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=30d

# ------------------------------
# CORS Configuration
# ------------------------------
CORS_ORIGIN=http://localhost:8080

# ------------------------------
# Logging
# ------------------------------
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log

# ------------------------------
# Rate Limiting
# ------------------------------
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window per IP

# ------------------------------
# Email Configuration (if needed)
# ------------------------------
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=user@example.com
# SMTP_PASS=your_smtp_password
# EMAIL_FROM=noreply@example.com
# EMAIL_NAME="API Trofy"

# ------------------------------
# WhatsApp Integration (WAHA)
# ------------------------------
# WHATSAPP_ENABLED=false
# WHATSAPP_API_URL=http://waha:3001
# WHATSAPP_SESSION_ID=trofy-whatsapp

# ------------------------------
# Feature Flags
# ------------------------------
# ENABLE_GOOGLE_SHEETS_SYNC=true
# ENABLE_WHATSAPP_NOTIFICATIONS=false
# ENABLE_EMAIL_NOTIFICATIONS=false

# ===================================
# DO NOT COMMIT SENSITIVE DATA TO VERSION CONTROL
# ===================================
# Add .env to your .gitignore file
# Keep your production credentials secure
